#!/usr/bin/env bash
# USAGE: bin/compile <build-dir> <cache-dir> <env-dir>

bp_dir=$(cd $(dirname $0); cd ..; pwd)

# Load some convenience functions like status(), echo(), and indent()
source $bp_dir/bin/common.sh

# Move the Meteor's app source into a subdirectory
(
  head "Moving app source into a subdirectory"
  cd $1
  mkdir ../app_src
  # the shopt makes the * glob catch .files
  shopt -s dotglob nullglob
  mv * ../app_src
  mv ../app_src ./app_src
)


# Install node first, as a dependency, then install meteor & build app
$bp_dir/bin/compile_node "$1" "$2"
$bp_dir/bin/compile_meteor "$1" "$2"

#
# Extras
#

# source scripts in 'extra' dir, if any.  Create them for custom stuff like
# binary dependencies, phantomjs for spiderable, etc.
APP_CHECKOUT_DIR=$1
COMPILE_DIR_SUFFIX=".meteor/heroku_build"
COMPILE_DIR="$APP_CHECKOUT_DIR"/"$COMPILE_DIR_SUFFIX"
mkdir -p "$COMPILE_DIR"
echo "-----> Running extras"
for file in `ls "$bp_dir"/extra | sort`; do
    . "$bp_dir"/extra/$file 
done