#!/usr/bin/env bash
# USAGE: bin/compile <build-dir> <cache-dir> <env-dir>

echo "Installing PhantomJS"

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo $BUILD_DIR
echo $CACHE_DIR
echo $ENV_DIR

cd $BUILD_DIR

pwd

curl -O -L 'http://bitbucket.org/ariya/phantomjs/downloads/phantomjs-1.9.7-linux-x86_64.tar.bz2'
tar -xvjf phantomjs-1.9.7-linux-x86_64.tar.bz2
rm phantomjs-1.9.7-linux-x86_64.tar.bz2

# add phatnom binaries to the path
export PATH=$PATH:$HOME/phantomjs-1.9.7-linux-x86_64/bin